<%- include('../partials/html-head') %>
<link rel="stylesheet" href="/stylesheets/sites/edit.css">
<%- include('../partials/nav') %>

<section id='edit-section'>
    <h1 id='edit-title'>Edit Your Description Here</h1>
    <form action='/sites/<%= site._id %>?_method=PUT' method='POST'>
        <p class='site-edit'>
            <label>
                Edit Site Name:
                <br />
                <input type='text' name='name' value='<%= site.name %>' autocomplete='off' size='40' maxlength='15' class='input'>
            </label>
        </p>
        <p class='site-edit'>
            <label>
                Edit Description:
                <br />
                <textarea name='description' rows='5' cols='50' maxlength='150' class='input'></textarea>
            </label>
        </p>
        <p class='site-edit'>
            <label>
                Edit Link:
                <br />
                <input type='url' name='url' value='<%= site.url %>' pattern='https://.*' size='35' class='input'>
            </label>
        </p>
        <p class='site-edit'>
            <button type='submit' class='btn btn secondary btn-large' id='done-btn'>Done</button>
        </p>
    </form>
</section>

<%- include('../partials/footer') %>